post_upgrade() {
  post_install
}

post_install() {
  echo "====="
  echo "The package has been installed."
  echo "Please set up the environment for your apps that need 32-bit Java to use it."
  echo "E.g.: "
  echo "export JAVA_HOME=/usr/lib/jvm/bin32-java-7-openjdk/jre"
  echo "export PATH=/usr/lib/jvm/bin32-java-7-openjdk/jre/bin:\$PATH"
  echo "====="
}
